{
  "name": "tspath",
  "version": "2.0.3",
  "description": "TypeScript Path Igniter resolves @paths specified in tsconfig",
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register test/**.*/test.ts",
    "tspath": "node ./dist/src/tspath.js"
  },
  "preferGlobal": true,
  "bin": {
    "tspath": "./dist/src/tspath.js"
  },
  "keywords": [
    "relative",
    "path",
    "typescript",
    "path",
    "resolve",
    "alias"
  ],
  "author": "Patrik Forsberg <patrik.forsberg@coldmind.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duffman/tspath.git"
  },
  "license": "LGPL-2.1-only",
  "dependencies": {
    "chalk": "^2.3.0",
    "cli-spinners": "^1.3.1",
    "escodegen": "^1.8.1",
    "esprima": "^4.0.1",
    "npm": "^6.14.6",
    "prompt-confirm": "^1.2.0",
    "typescript": "^3.8.3",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.42",
    "@types/node": "^13.9.5",
    "chai": "^4.1.2",
    "mocha": "^3.5.0"
  }
}
